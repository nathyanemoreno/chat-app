    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prisma": "latest",
    "prisma-erd-generator": "^1.11.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
